<Window x:Class="SEH_America.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SEH_America"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <WrapPanel Orientation="Vertical">
        <StackPanel Orientation="Horizontal">
            <Label>Title</Label>
            <TextBox Name="imageTitle" Width="150" Height="20">Search by Title</TextBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label>Image Text</Label>
            <TextBox Name="imageText" Width="150" Height="20">Search by Text</TextBox>
        </StackPanel>
        <Button Name="btnSubmit" Content="Submit" Margin="60 10" />

		<Grid Name="outPut">
			<ListBoxItem>
				Images would show here
			</ListBoxItem>
		</Grid>
    </WrapPanel>
</Window>
